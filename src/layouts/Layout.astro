---
import "@/styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;700;800;900&family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <meta charset="UTF-8" />
    <meta name="author" content="Bruno Souza" />
    <meta
      name="description"
      content="Cortez: Barbearia e Salão de Beleza. Experimente o Luxo dos Nossos Serviços de Barber Concierge"
    />
    <meta
      name="keywords"
      content="Barbearia, Salão de Beleza, Barbearia e Salão de Beleza, Barber Concierge, Barbearia Barber Concierge, Salão de Beleza Barber Concierge, Barbearia e Salão de Beleza Barber Concierge, Cortez, Cortez Barbearia e Salão de Beleza"
    />
    <link rel="shortcut icon" href="./logo.svg" type="image/x-icon" />
    <meta name="robots" content="index, follow" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
